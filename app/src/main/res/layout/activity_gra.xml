    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.billog_studio.janigdynie_graimprezowa.Gra">

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:scaleType="fitCenter"
